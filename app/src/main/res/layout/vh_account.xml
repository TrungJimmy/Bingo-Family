<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:elevation="4dp"
                                    android:layout_marginTop="8dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:padding="12dp"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp">
	<RelativeLayout
		android:paddingBottom="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:textSize="16sp"
			android:textStyle="italic"
			android:paddingLeft="10dp"
			android:paddingTop="12dp"
			android:paddingBottom="5dp"
			android:paddingRight="5dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:id="@+id/pname"
			android:text="Name: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_alignBaseline="@id/pname"
			android:textSize="18sp"
			android:paddingLeft="5dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingRight="5dp"
			android:layout_toRightOf="@id/pname"
			android:id="@+id/acc_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:textSize="16sp"
			android:textStyle="italic"
			android:paddingLeft="10dp"
			android:paddingTop="5dp"
			android:paddingBottom="10dp"
			android:paddingRight="5dp"
			android:layout_below="@id/pname"
			android:id="@+id/paccno"
			android:text="Acc No: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<ImageButton
			android:scaleType="fitXY"
			android:id="@+id/img_cross"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="10dp"
			android:src="@android:drawable/ic_menu_close_clear_cancel"
			android:tint="@android:color/black"
			android:background="@android:color/transparent"/>
		<TextView
			android:layout_below="@id/img_cross"
			android:paddingRight="20dp"
			android:textColor="@android:color/holo_green_light"
			android:textSize="20sp"
			android:textStyle="bold|italic"
			android:layout_alignParentRight="true"
			android:text="100rs"
			android:layout_marginBottom="10dp"
			android:id="@+id/acc_balance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:textSize="18sp"
			android:layout_toRightOf="@id/paccno"
			android:layout_alignBaseline="@id/paccno"
			android:layout_width="wrap_content"
			android:id="@+id/acc_number"
			android:layout_height="wrap_content"/>
	</RelativeLayout>
</android.support.v7.widget.CardView>